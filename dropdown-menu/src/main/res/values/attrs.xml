<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="DropdownMenu">
        <attr name="titleText" format="string"/>
        <attr name="titleTextSize" format="float"/>
        <attr name="titleColor" format="color"/>
        <attr name="titleBgColor" format="color"/>
        <attr name="iconExpanded" format="reference"/>
        <attr name="iconCollapse" format="reference"/>
        <attr name="iconColor" format="integer">
            <enum name="dark" value="1"/>
            <enum name="light" value="0"/>
        </attr>
        <attr name="listBgColor" format="color"/>
    </declare-styleable>
    <declare-styleable name="MaxHeightListView">
        <attr name="maxHeight" format="integer"/>
    </declare-styleable>
</resources> 